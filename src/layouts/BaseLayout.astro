---
import '../styles/main.css'

export interface Props {
  title: string;
  description?: string;
  meta?: any[];
}

const {
  title = 'Welcome to Metatags AI',
  description = 'Generate HTML meta-tags for articles using AI.',
  meta = [],
} = Astro.props
const canonicalURL = new URL(Astro.url.pathname, Astro.site)
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <meta name="generator" content={Astro.generator} />

    <!-- Favicon -->
    <link rel="canonical" href={canonicalURL} />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <!-- <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png"> -->
    <!-- <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png"> -->
    <!-- <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png"> -->
    <!-- <link rel="manifest" href="/site.webmanifest"> -->
    <!-- <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#1f1716"> -->
    <!-- <meta name="msapplication-TileColor" content="#1f1716"> -->
    <!-- <meta name="theme-color" content="#1f1716"> -->

    <!-- Stylesheets -->
    <link rel="preconnect" href="https://rsms.me/">
    <link rel="stylesheet" href="https://rsms.me/inter/inter.css">

    <!-- Title, Description, Image -->
    <title>{title}{title && title.length < 46 ? ' | metatagsai.com' : ''}</title>
    {meta.filter(item => item.name).map(item => (
      <meta name={item.name} content={item.content}>
    ))}
    {meta.filter(item => item.property).map(item => (
      <meta property={item.property} content={item.content}>
    ))}
  </head>
  <body>
    <slot />
  </body>
</html>
